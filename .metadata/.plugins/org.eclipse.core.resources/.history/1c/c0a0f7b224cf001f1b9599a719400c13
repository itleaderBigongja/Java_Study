package thread_4;

public class ThreadSync_5 {

	public static void main(String[] args) {
		Memory_4 mem = new Memory_4(16);
		DownLoad_4 down = new DownLoad_4(mem);
		Play_4 play = new Play_4(mem);
		
		down.start();
		play.start();
	}
}

class Memory_5 {
	int[] buffer;
	int size;
	int progress;
	
	Memory_5(int asize) {
		size = asize;
		buffer = new int[asize];
		progress = 0;
	}
}