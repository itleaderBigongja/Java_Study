package thread_4;

public class ThreadSync_5 {

	public static void main(String[] args) {
	
		Thread worker_1 = new Thread(new Runnable() {
			
			@Override
			public void run() {
				for(int i = 0; i < 10; i++) {
					try {
						Thread.sleep(1000);
						System.out.print(i+" ");
					} catch (Exception e) {
						;
					}
				}
			}
		});
		
		Thread worker_2 = new Thread(new Runnable() {
			
			@Override
			public void run() {
				for(int i = 0; i < 20; i++) {
					try {
						Thread.sleep(1000);
						System.out.print(i +" ");
					} catch (Exception e) {
						;
					}
				}
			}
		});
		worker_1.start();
		worker_1.wait();
	}
}
